                icon.className = "listener-avatar pop-in";
                const avatarBox = document.getElementById("listenerAvatars");
              if (avatarBox) avatarBox.appendChild(icon);
              
                setTimeout(() => {
                  icon.classList.add("fade-out");
                  setTimeout(() => icon.remove(), 1000);
                }, 5000);
              });

              
              
