    tooltip.style.top = `${rect.top - 30}px`;  // Position above the element
    tooltip.style.left = `${rect.left + rect.width / 2 - tooltip.offsetWidth / 2}px`; // Center the tooltip above the element

    // Show the tooltip
    setTimeout(() => {
      tooltip.classList.add('show');
    }, 200);
  }

