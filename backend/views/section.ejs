    0% {
      transform: translateX(0) translateY(0);
    }

    30% {
      transform: translateX(-80px) translateY(-10px);
    }

    60% {
      transform: translateX(80px) translateY(10px);
    }

    100% {
      transform: translateX(0) translateY(0);
