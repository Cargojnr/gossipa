<%- include('layout') %>
  <style>
    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 30px;
      padding: 30px;
    }

    .charts-section canvas {
      margin-bottom: 20px;
      background: #fff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .live-feed-container {
  max-height: 300px;
  overflow-y: auto;
  background: #fdfdfd;
  border: 1px solid #ccc;
  border-radius: 8px;
  padding: 1rem;
  margin-top: 20px;
  box-shadow: .2rem .2rem .5rem rgba(0, 0, 0, 0.1);
}

.live-feed-item {
  padding: .75rem 1rem;
  margin-bottom: .75rem;
  border-left: 4px solid;
  border-radius: 5px;
  background-color: #f8f9fa;
  font-size: 0.95rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.live-feed-item img {
  flex-shrink: 0;
}


.feed-post {
  border-color: #007bff;
  background-color: #e6f0ff;
}

.feed-comment {
  border-color: #28a745;
  background-color: #e9f9ee;
}

.feed-reaction {
  border-color: #dc3545;
  background-color: #ffe6e6;
}

.feed-generic {
  border-color: #6c757d;
}

.feed-time {
  font-size: 0.75rem;
  color: #777;
}

.feed-message {
  font-weight: 500;
}

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .activity-feed {
      max-height: 400px;
      overflow-y: auto;
      padding: 15px;
      background: #f9f9ff;
      border-left: 5px solid #007bff;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    }

    .activity-item {
      margin-bottom: 10px;
      padding: 10px;
      background: white;
      border-radius: 8px;
      transition: all 0.3s ease;
    }
  </style>

  <body>
    <div class="container">


      <div class="sidebar">
        <div class="first-item">
          <h1>Anonym</h1>
        </div>

        <div>
          <div class="card">
            <div class="card-title">{title}</div>
            <div class="card-body">{body}</div>
          </div>

          <div class="card">
