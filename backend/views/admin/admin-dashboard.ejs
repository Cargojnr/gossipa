        </div>


        <div class="main-content" style="display:  grid; grid-template-columns: repeat(3, 1fr); gap: 20px">
          <% if (locals.reviews) { %>
            <div class="card">
              <div class="card-title">No. of Reviews</div>
              <div class="card-body">
                <%= reviews.length %>
              </div>
              <!-- <button>Click Me</button> -->
