    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            const el = entry.target;
            if (entry.isIntersecting) {
              // fade-in sections
              if (el.classList.contains('fade-in')) el.classList.add('show');
              // slideshow cards
              if (el.classList.contains('slide')) el.classList.add('visible');
            } else {
              if (el.classList.contains('fade-in')) el.classList.remove('show');
              if (el.classList.contains('slide')) el.classList.remove('visible');
            }
          });
        }, { threshold: 0.1 });

        // Observe every section and every slide
        document.querySelectorAll('section, .fade-in, .slide').forEach(el => {
          // Make sure fade-in sections start hidden
          if (el.tagName === 'SECTION' && !el.classList.contains('fade-in')) {
            el.classList.add('fade-in');
          }
          observer.observe(el);
        });
      });
    </script>




