  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const header = document.querySelector("header");
      const nextSection = document
        .querySelector("body")
        .querySelector("section:not(.active)");
      const logo = document.getElementById("logo");

      window.addEventListener("scroll", function () {
        const scrolled = window.scrollY > 0;
        if (scrolled) {
          let body = document.querySelector("body");
          body.style.overflowY = "scroll";
          header.classList.add("scrolled");
          logo.style.opacity = 1;
        } else {
          header.classList.remove("scrolled");
          logo.style.opacity = 0;
        }
      });

      const aboutInfoSection = document.querySelector("#about-info");
      const headers = document.querySelectorAll(".m-head");

      function typeWriter(text, element, delay = 100) {
        let i = 0;
        function type() {
          if (i < text.length) {
            element.innerHTML += text.charAt(i);
            i++;
            setTimeout(type, delay);
          }
        }
        type();
      }

      function handleIntersect(entries) {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            let delay = 0;
            headers.forEach((header, index) => {
              const text = header.textContent;
              header.textContent = "";
              setTimeout(() => {
                typeWriter(text, header, 100);
              }, delay);
              delay += text.length * 100 + 500;
            });
            observer.disconnect();
          }
        });
      }

      const observer = new IntersectionObserver(handleIntersect, {
        threshold: 0.5,
      });

      observer.observe(aboutInfoSection);
    });
  </script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const slides = [...document.querySelectorAll('.device-slide')];
      const prev = document.querySelector('.prev-device');
      const next = document.querySelector('.next-device');
      let idx = 0, timer;

      function go(i) {
        slides.forEach(s => s.classList.remove('active'));
        slides[i].classList.add('active');
        idx = i;
      }

      prev.onclick = () => go((idx - 1 + slides.length) % slides.length);
      next.onclick = () => go((idx + 1) % slides.length);

      timer = setInterval(() => go((idx + 1) % slides.length), 5000);

      // Pause on hover
      document.getElementById('slideshow-gallery')
        .addEventListener('mouseenter', () => clearInterval(timer));
      document.getElementById('slideshow-gallery')
        .addEventListener('mouseleave', () => timer = setInterval(() => go((idx + 1) % slides.length), 5000));
    });
  </script>

